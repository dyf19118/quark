{
  "compilerOptions": {
    "noImplicitAny": false,
    "noImplicitThis": false,
    "baseUrl": ".",
    "rootDir": ".",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "react",
    "jsxFactory": "QuarkElement.h",
    "jsxFragmentFactory": "QuarkElement.Fragment",
    "sourceMap": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "outDir": "lib",
    "declarationDir": "./lib",
    "declaration": true /* 生成相关的 '.d.ts' 文件。 */,
    "emitDeclarationOnly": true /* 只生成声明文件，不生成 js 文件*/,
    "lib": ["esnext", "dom"],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "test/**/*.ts", "test/**/*.tsx", "rollup.config.ts"],
  "exclude": ["node_modules"]
}
